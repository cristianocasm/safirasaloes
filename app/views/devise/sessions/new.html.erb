<%= form_for(resource, :as => resource_name, :url => session_path(resource_name, login: true), :html => { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <div class="col-lg-8 col-lg-offset-2">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-8 col-lg-offset-2">
      <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-9 col-lg-offset-2">
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Mantenha-me conectado
        </label>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-9 col-lg-offset-2">
      <%= f.submit 'Entrar',  class: "btn btn-warning" %>
    </div>
  </div>
<% end %>