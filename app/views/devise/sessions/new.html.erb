<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <label class="control-label col-lg-3" for="inputEmail">Email</label>
    <div class="col-lg-9">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-lg-3" for="inputPassword">Senha</label>
    <div class="col-lg-9">
      <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-9 col-lg-offset-3">
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Mantenha-me conectado
        </label>
      </div>
    </div>
  </div>

  <div class="col-lg-9 col-lg-offset-3">
    <%= f.submit 'Entrar',  class: "btn btn-info btn-sm" %>
  </div>
  <br />
<% end %>