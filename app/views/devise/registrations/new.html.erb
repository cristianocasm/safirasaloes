<div style="text-align: center; margin-top: 5%;">
  <%= link_to '/auth/facebook?scope=email&action=signup_or_signin', class: 'btn btn-primary btn-lg', style: 'background-color: #3b5998;' do %>
    <i class='fa fa-facebook'> <span style="padding-left: 20px"><b>Cadastrar com o Facebook</b></span> </i>
  <% end %>

  <div class="hr">
    <div class="text-divider">ou</div>
