<div class="padd">
  <div class="form quick-post">
    <%= form_tag(@service, html: { class: 'form-horizontal' }) do |f| %>

      <div class='row'>
        <div class="form-group">
          <%= f.label :nome, 'Nome:', class: 'control-label col-lg-2' %>
          <div class="col-lg-4">
            <div class="padd-left">
              <%= f.text_field :nome, class: "form-control input-sm" %>
            </div>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class="form-group">
          <%= f.label :preco_fixo, 'Preço:', class: 'control-label col-lg-2' %>
          <div class="col-lg-4">
            <% link_to_add_fields 'Criar Novo Preço', f, 'prices' do -%>
              <span><i class='fa fa-plus'></i> Inserir Novo Preço<span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-md-12">
          <div class="col-xs-10 col-md-3">
            <%= link_to 'Cancelar', services_path, class: 'btn btn-danger', data: { disable_with: "Cancelar" } %>
            <%= f.submit 'Próximo Passo >>', class: 'btn btn-success', data: { disable_with: "Próximo Passo >>" } %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>