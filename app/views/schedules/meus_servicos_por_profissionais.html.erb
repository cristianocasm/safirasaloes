<%= content_for :title, 'Meus Serviços e Profissionais | SafiraSalões' %>

  <% @myProfs.each do |prof| %>
    <div class="panel widget-todo rounded shadow border">
      <!-- Widget title -->
      <div class="panel-heading">
        <div class="pull-left">
          <div>
            <%= prof.nome.titleize %>
          </div>
          <span class="label label-success" data-toggle="popover" data-trigger="hover" data-placement="right" data-html="false" title="Safiras Acumuladas"
            data-content="Exibe a quantia de Safiras que você acumulou com este Profissional / Estabelecimento.">
            <%= prof_safiras(prof.id) %> <i class="fa fa-diamond"></i>
          </span>
        </div>
        <div class="widget-icons pull-right">
          <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
          <a href="#" class="wclose"><i class="fa fa-times"></i></a>
        </div>  
        <div class="clearfix"></div>
      </div>
      
      <div class="panel-body no-padding">
        <ul class="todo-list">
          <% prof.services.each do |srv| %>
            <% srv.prices.each do |pr| %>
              <li>
                <!-- Icon with file name -->
                <a href="#" class="pull-right"><i class="fa fa-times rounded-gray"></i></a>
                <strong><i class="fa fa-magic"></i> <%= pr.nome %></strong>
                <!-- Upload details -->
                <div class="file-meta">Preço: <%= number_to_currency(pr.preco) %></div>
                <!-- Progress bar -->
                <div class="progress progress-animated progress-striped active">
                  <span><i class="fa fa-diamond rounded"></i></span>
                  <div class="progress-bar progress-bar-success" data-percentage="<%= safiras_percentage_by(pr.preco) %>">
                    <span class="sr-only">80% Complete</span>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
      
    </div>
  <% end %>