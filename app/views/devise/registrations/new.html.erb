</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: 'form-horizontal' }) do |f| %>

    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <%= f.email_field :email, class: "form-control", placeholder: "Informe seu E-mail" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <%= f.password_field :password, class: "form-control", placeholder: "Informe sua Senha" %>
      </div>
    </div>

  <div class="form-group">
    <div class="col-lg-8 col-lg-offset-2">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme sua Senha" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-8 col-lg-offset-2">
      <%= f.submit "Cadastrar", class: "btn btn-warning" %>
    </div>
  </div>

<% end %>
