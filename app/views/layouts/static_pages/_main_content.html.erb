<!-- Main bar -->
<div class="mainbar no_margin" id="main_content">

  <!-- Page heading -->
  <div class="page-head">
    <h2 class="pull-left">
      <%= link_to root_path, class: "navbar-brand" do %>
        SafiraSalões
      <% end %>
    </h2>

    <div class="clearfix"></div>

  </div>
  <!-- Page heading ends -->

  <!-- Matter -->
  <div class="matter">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <!-- Widget -->
          <div class="widget">
            <!-- Widget title -->
            <div class="widget-head">
              <div class="pull-left">Política de Privacidade</div>
              <div class="clearfix"></div>
            </div>
            <div class="widget-content">
              <!-- Widget content -->
              <div class="padd">
                <%= flash_messages %>
                <%= yield %>
              </div>
            </div>
          </div> 
        </div>
      </div>
    </div>
  </div>

<!-- Matter ends -->
</div>

<!-- Mainbar ends -->     
<div class="clearfix"></div>