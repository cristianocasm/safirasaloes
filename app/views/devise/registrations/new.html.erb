<%= content_for :titulo, 'Cadastro de Profissional' %>

<h2>Cadastrar</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: 'form-horizontal' }) do |f| %>

    <div class="form-group">
      <label class="control-label col-lg-3" for="inputEmail">Email</label>
      <div class="col-lg-9">
        <%= f.email_field :email, class: "form-control", placeholder: "Email", :autofocus => true %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-lg-3" for="inputEmail">Senha</label>
      <div class="col-lg-9">
        <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
      </div>
    </div>

  <div class="form-group">
    <label class="control-label col-lg-3" for="inputEmail">Confirme a Senha</label>
    <div class="col-lg-9">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "ConfirmaÃ§Ã£o de Senha" %>
    </div>
  </div>

  <div class="col-lg-9 col-lg-offset-3">
    <%= f.submit "Cadastrar", class: "btn btn-info btn-sm" %>
  </div>
<% end %>

