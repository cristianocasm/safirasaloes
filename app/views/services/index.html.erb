<h1>Listagem de Serviços</h1>

<table id="table" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preco</th>
      <th>Recompensa (Safiras)</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr <%= "class=preco_variavel" unless service.preco_fixo %>>
        <td><%= service.nome %></td>
        <% if service.preco_fixo %>
          <td><%= number_to_currency(service.prices.first.preco) %></td>
          <td><%= service.prices.first.recompensa_divulgacao %></td>
        <% else %>
          <td><i>Clique para ver os preços</i></td>
          <td><i>Clique para ver as recompensas</i></td>
        <% end %>
        <td>
          <%= link_to service, class: 'btn btn-success btn-xs', title: 'Consultar' do %>
            <i class='fa fa-eye fa-border'></i>
          <% end %>
          <%= link_to edit_service_path(service), class: 'btn btn-warning btn-xs', title: 'Editar' do %>
            <i class='fa fa-pencil fa-border'></i>
          <% end %>
          <%= link_to service, method: :delete, data: { confirm: 'Deletar registro?' }, class: 'btn btn-danger btn-xs', title: 'Excluir' do %>
            <i class='fa fa-times fa-border'></i>
          <% end %>
        </td>
      </tr>
      <% unless service.preco_fixo %>
        <tr class="contem_precos_e_recompensasv collapse">
          <td colspan="4">
            <% service.prices_ordered.each do |price| %>
              <p>
                <strong><%= "#{price.descricao}:" %></strong>
              </p>
              <p class="padd-left">
                <strong>Preço</strong>
                <%= number_to_currency(price.preco) %>
              </p>
              <p class="padd-left">
                <strong>Recompensa Por Divulgação (Safiras):</strong>
                <%= price.recompensa_divulgacao %>
              </p>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Serviço', new_service_path, class: 'btn btn-success btn-xs' %>
