var numOrdens = parseInt($("#ordens_trocas").text());
numOrdens = numOrdens - 1;
$("#ordens_trocas").text(numOrdens);

$("#<%= @schedule_id %>").fadeOut(300, function() { $(this).remove(); });

if(numOrdens == 0){
  $("#ordensDeTroca").append(
    '<% concat(
            content_tag(:li, id="bom_trabalho") do
              concat content_tag(:h6, "Bom Trabalho! Você não possui Ordens de Troca em aberto. Yupii!")
              concat content_tag(:div, nil, class: "clearfix") 
              concat tag(:hr)
            end
          ) %>'
    );
}